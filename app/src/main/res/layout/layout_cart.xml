<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="515dp"
    android:background="#FA8B03"
    android:padding="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/title"
        android:textColor="#efefef"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:text="~Om Sai Ram~"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Share this App with your friends"
        android:onClick="ShareIt"
        android:textColor="#efefef"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:id="@+id/share"
        android:layout_below="@+id/title"
        android:drawableRight="@drawable/share1"
        android:padding="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:id="@+id/v1"
        android:layout_below="@+id/share"
        android:padding="10dp">

    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/v1"
        android:text="Read More About Sai Mantra"
        android:textSize="19dp"
        android:textColor="#efefef"
        android:drawableRight="@drawable/reading"
        android:padding="10dp"
        android:id="@+id/more"
        android:onClick="moreAbout"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:id="@+id/v2"
        android:layout_below="@+id/more"
        android:padding="10dp">

    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:text="Visit HeartMeetSoul.com"
        android:textColor="#efefef"
        android:textSize="19dp"
        android:layout_below="@id/v2"
        android:id="@+id/visit"
        android:drawableRight="@drawable/visit"
        android:onClick="visit"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:id="@+id/v3"
        android:layout_below="@+id/visit"
        android:padding="10dp">
    </View>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:text="Privacy Policy"
        android:textColor="#efefef"
        android:textSize="19dp"
        android:layout_below="@id/v3"
        android:id="@+id/privacy"
        android:drawableRight="@drawable/privacy"
        android:onClick="privacy"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:id="@+id/v4"
        android:layout_below="@+id/privacy"
        android:padding="10dp">

    </View>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="Rate this app on Play Store"
        android:textColor="#efefef"
        android:textSize="19dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/v4"
        android:paddingRight="10dp"
        android:drawableRight="@drawable/play_store"
        android:id="@+id/rating"
        android:onClick="rate"
        />
    <ImageView
        android:layout_width="170dp"
        android:paddingLeft="10dp"
        android:layout_height="29dp"
        android:layout_below="@+id/rating"
        android:id="@+id/fivestar"
        android:scaleType="centerCrop"
        android:src="@drawable/fivestar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:id="@+id/v5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fivestar"
        android:padding="10dp">

    </View>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:fontFamily="sans-serif-black"
    android:text="Sai Baba Mantra v 1.0"
    android:layout_marginBottom="10dp"
    android:layout_alignParentBottom="true"
    android:textColor="#efefef"
    android:layout_marginLeft="18dp"
    android:layout_below="@+id/v5"
    android:textSize="25dp"
    />





