    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5EE5C0D"
        android:layout_above="@+id/tabs"
        >

    </View>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/tabs"
        app:tabSelectedTextColor="#E9F1F5"
        app:tabGravity="center"
        app:tabTextColor="#EE774B02"
        android:minHeight="?android:attr/actionBarSize"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/colorbackground"
        app:tabIndicatorHeight="1.4dp"
        app:tabIndicatorAnimationDuration="100"

        android:background="@drawable/background_gradient"
        android:layout_below="@+id/rel"
        >

    </com.google.android.material.tabs.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5EE5C0D"
        android:layout_below="@+id/tabs"
        >

    </View>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#66787EA7"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tabs"
        android:id="@+id/vp1">

    </androidx.viewpager.widget.ViewPager>




